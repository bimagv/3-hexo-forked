<% if ((post.original != false && !is_page() && theme.copyright) || post.original){ %>
<div class="article_copyright">
    <p><span class="copy-title">Article Title:</span><%= post.title %></p>
    <%if(theme.word_count){%><p><span class="copy-title">文章字数:</span><span class="post-count"><%=wordcount(post.content) %></span></p><%}%>
    <p><span class="copy-title">Author:</span><a  title="<%=config.author%>"><%=config.author%></a></p>
    <p><span class="copy-title">Release:</span><%= post.date.format("YYYY-MM-DD, HH:mm:ss") %></p>
    <p><span class="copy-title">Latest update:</span><%= post.updated.format("YYYY-MM-DD, HH:mm:ss") %></p>
    <span class="copy-title">Original Link:</span><a class="post-url" href="<%- url_for(post.path) %>" title="<%= post.title %>"><%= post.permalink %></a>
    <p>
        <span class="copy-title">Copyright notice:</span><i class="fa fa-creative-commons"></i> <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/4.0/" title="CC BY-NC-SA 4.0 International" target = "_blank">"CC BY-NC-SA 4.0"</a> keep the original link and author.
    </p>
</div>
<% } %>
